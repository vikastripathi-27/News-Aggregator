<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nextlink.newsfeed">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.nextlink.newsfeed.Swipe_act_sports"></activity>
        <activity android:name="com.nextlink.newsfeed.Swipe_act_health" />
        <activity android:name="com.nextlink.newsfeed.Swipe_act_business" />
        <activity android:name="com.nextlink.newsfeed.Swipe_act_entertainement" />
        <activity android:name="com.nextlink.newsfeed.Swipe_act_tech" />
        <activity android:name="com.nextlink.newsfeed.DetailActivity" />
        <activity android:name="com.nextlink.newsfeed.Swipe_act" />
        <activity android:name="com.nextlink.newsfeed.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.nextlink.newsfeed.BrowserActivity" />
        <activity android:name="com.nextlink.newsfeed.RSSFeedActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>